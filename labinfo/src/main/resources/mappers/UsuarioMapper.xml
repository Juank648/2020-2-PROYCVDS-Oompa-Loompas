<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="edu.eci.cvds.mappers.UsuarioMapper">
	<select id="getUsuario" parameterType="map" resultMap="UsuarioResult">
		SELECT * FROM usuario WHERE correo=#{correo}
	</select>
	<insert id="registrarUsuario" parameterType="map">
		insert into usuario values(#{nombre},#{estado},#{correo},#{contrasena},#{carnet})
	</insert>
	<resultMap type='Usuario' id='UsuarioResult'>
	    <id property='id' column='carnet'/>
	    <result property="nombre" column="nombre"></result>
	    <result property="estado" column="estado"></result>
	    <result property="correo" column="correo"></result>
	    <result property="contrasena" column="contrasena"/>      
	</resultMap>
</mapper>